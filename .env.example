# Faux Splunk Cloud Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# UI Configuration
# =============================================================================

# Port to expose the UI on (default: 3000)
FSC_UI_PORT=3000

# =============================================================================
# API Configuration
# =============================================================================

# Enable debug mode (default: false)
FSC_DEBUG=false

# JWT secret key for authentication - CHANGE THIS IN PRODUCTION!
FSC_JWT_SECRET_KEY=change-me-in-production

# =============================================================================
# Splunk Instance Configuration
# =============================================================================

# Default admin password for new Splunk instances
FSC_DEFAULT_ADMIN_PASSWORD=FauxSplunk123!

# Splunk Enterprise Docker image to use
FSC_SPLUNK_IMAGE=splunk/splunk:9.3.2

# Default time-to-live for instances in hours (default: 24)
FSC_DEFAULT_TTL_HOURS=24

# Maximum TTL in hours (default: 168 = 1 week)
FSC_MAX_TTL_HOURS=168

# =============================================================================
# Resource Limits
# =============================================================================

# Maximum memory per Splunk container in MB (default: 4096)
FSC_MAX_MEMORY_MB=4096

# Maximum CPU cores per container (default: 2.0)
FSC_MAX_CPU_COUNT=2.0
